{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": "Blog articles with full SEO"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "featuredImageAlt": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "publishedDate": {
      "type": "date"
    },
    "categories": {
      "type": "json"
    },
    "tags": {
      "type": "json"
    },
    "readingTime": {
      "type": "integer"
    },
    "enableArticleSchema": {
      "type": "boolean",
      "default": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "openGraph": {
      "type": "component",
      "repeatable": false,
      "component": "shared.open-graph"
    },
    "scripts": {
      "type": "component",
      "repeatable": false,
      "component": "shared.script-injection"
    },
    "excludeFromSitemap": {
      "type": "boolean",
      "default": false
    }
  }
}



