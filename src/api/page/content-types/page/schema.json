{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Generic pages with full SEO control"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Page title"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "description": "URL-friendly slug automatically generated from title"
    },
    "content": {
      "type": "richtext",
      "description": "Main page content in rich text format"
    },
    "htmlBlocks": {
      "type": "text",
      "description": "Raw HTML blocks for custom content sections"
    },
    "featuredImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false,
      "description": "Featured image for the page"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "description": "SEO metadata component"
    },
    "openGraph": {
      "type": "component",
      "repeatable": false,
      "component": "shared.open-graph",
      "description": "Open Graph metadata for social media sharing"
    },
    "scripts": {
      "type": "component",
      "repeatable": false,
      "component": "shared.script-injection",
      "description": "Custom scripts injection component"
    },
    "excludeFromSitemap": {
      "type": "boolean",
      "default": false,
      "description": "Whether to exclude this page from the sitemap"
    }
  }
}
